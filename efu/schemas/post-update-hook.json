{
    "$schema": "http://json-schema.org/draft-04/schema#",

    "title": "Post update hook",
    "description": "Program which will be called as soon as the entire update is successfully executed",

    "type": "object",

    "properties": {
        "uri": {
            "description": "URI to the program",
            "type": "string",
            "format": "uri"
        },
        "sha256sum": {
            "description": "sha256sum of the file downloaded from URI",
            "$ref": "definitions.json#/sha256sum"
        }
    },

    "required": [
        "sha256sum",
        "uri"
    ],

    "additionalProperties": false
}
