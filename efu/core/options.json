[
    {
        "metadata": "install-condition",
        "modes":  ["copy", "flash", "imxkobs", "raw", "tarball"],
        "required_in": ["copy", "raw", "tarball"],
        "type": "str",
        "choices": ["always", "content-diverges", "version-diverges"],
        "default": "always",
        "help": "When object should be installed",
        "cli": ["--install-condition"],
        "verbose-name": "install condition"
    },
    {
        "metadata": "install-condition-pattern-type",
        "modes":  ["copy", "flash", "imxkobs", "raw", "tarball"],
        "type": "str",
        "choices": ["linux-kernel", "u-boot", "regexp"],
        "help": "What type of pattern to use to retrive version from object",
        "cli": ["--install-condition-pattern-type"],
        "verbose-name": "install condition pattern type",
        "requirements": {
            "install-condition": {
                "type": "value",
                "value": "version-diverges"
            }
        }
    },
    {
        "metadata": "install-condition-pattern",
        "modes":  ["copy", "flash", "imxkobs", "raw", "tarball"],
        "type": "str",
        "help": "Regular expression to use when retriving version from object",
        "cli": ["--install-condition-pattern"],
        "verbose-name": "install condition pattern",
        "requirements": {
            "install-condition-pattern-type": {
                "type": "value",
                "value": "regexp"
            }
        }
    },
    {
        "metadata": "install-condition-seek",
        "modes":  ["copy", "flash", "imxkobs", "raw", "tarball"],
        "type": "int",
        "default": 0,
        "help": "Place to start reading object to retrive version",
        "cli": ["--install-condition-seek"],
        "verbose-name": "install condition seek",
        "requirements": {
            "install-condition-pattern-type": {
                "type": "value",
                "value": "regexp"
            }
        }
    },
    {
        "metadata": "install-condition-buffer-size",
        "modes":  ["copy", "flash", "imxkobs", "raw", "tarball"],
        "type": "int",
        "default": -1,
        "help": "How much bytes to read object to retrive version",
        "cli": ["--install-condition-buffer-size"],
        "verbose-name": "install condition buffer size",
        "requirements": {
            "install-condition-pattern-type": {
                "type": "value",
                "value": "regexp"
            }
        }
    },
    {
        "metadata": "target-device",
        "modes": ["copy", "flash", "raw", "tarball"],
        "required_in": ["copy", "flash", "raw", "tarball"],
        "type": "path",
        "help": "Target device for the object (e.g. /dev/sda1)",
        "cli": ["--target-device", "-td"],
        "verbose-name": "target device"
    },
    {
        "metadata": "target-path",
        "modes": ["copy", "tarball"],
        "required_in": ["copy", "tarball"],
        "type": "path",
        "help": "Target path on which the object must be installed to (e.g. /vmlinuz). This is relative to the mount point.",
        "cli": ["--target-path", "-tp"],
        "verbose-name": "target path"
    },
    {
        "metadata": "filesystem",
        "modes": ["copy", "tarball"],
        "required_in": ["copy", "tarball"],
        "type": "str",
        "choices": ["btrfs", "ext2", "ext3", "ext4", "vfat", "fsfs", "jffs2", "ubifs", "xfs"],
        "help": "Filesystem type that must be used to mount the target-device",
        "cli": ["--filesystem", "-fs"],
        "verbose-name": "filesystem"
    },
    {
        "metadata": "mount-options",
        "modes": ["copy", "tarball"],
        "type": "str",
        "help": "Options to mount the filesystem in target-device",
        "cli": ["--mount-options"],
        "verbose-name": "mount options"
    },
    {
        "metadata": "format?",
        "modes": ["copy", "tarball"],
        "type": "bool",
        "default": false,
        "help": "Specifies whether the target device (target-device) should be formatted or not.",
        "cli": ["--format"],
        "verbose-name": "format device"
    },
    {
        "metadata": "format-options",
        "modes": ["copy", "tarball"],
        "requirements": {
            "format?": {
                "type": "value",
                "value": true
            }
        },
        "type": "str",
        "help": "Options to format target-device",
        "cli": ["--format-options"],
        "verbose-name": "format device options"
    },
    {
        "metadata": "chunk-size",
        "modes": ["raw"],
        "type": "int",
        "default": 131072,
        "min": 0,
        "help": "The size of the buffers (in bytes) used to read and write (default is 128KiB)",
        "cli": ["--chunk-size"],
        "verbose-name": "chunk size"
    },
    {
        "metadata": "count",
        "modes": ["raw"],
        "type": "int",
        "default": -1,
        "min": -1,
        "help": "How many chunk-size blocks must be copied from the source file to the target. The default value of -1 means all possible bytes until the end of the file",
        "cli": ["--count"],
        "verbose-name": "count"
    },
    {
        "metadata": "seek",
        "modes": ["raw"],
        "type": "int",
        "default": 0,
        "min": 0,
        "help": "How many chunk-size blocks must be skipped in the target file",
        "cli": ["--seek"],
        "verbose-name": "seek"
    },
    {
        "metadata": "skip",
        "modes": ["raw"],
        "type": "int",
        "default": 0,
        "min": 0,
        "help": "How many chunk-size blocks must be skipped in the source file",
        "cli": ["--skip"],
        "verbose-name": "skip from source"
    },
    {
        "metadata": "truncate",
        "modes": ["raw"],
        "type": "bool",
        "default": false,
        "help": "True if the file pointed to by the target-path should be open in truncate mode (erase content before writing)",
        "cli": ["--truncate"],
        "verbose-name": "truncate"
    },
    {
        "metadata": "volume",
        "modes": ["ubifs"],
        "required_in": ["ubifs"],
        "type": "str",
        "help": "The volume name",
        "cli": ["--volume"],
        "verbose-name": "volume"
    },
    {
        "metadata": "1k_padding",
        "modes": ["imxkobs"],
        "type": "bool",
        "help": "If 1k-padding should be added in the head",
        "cli": ["--padding-1k"],
        "verbose-name": "Add 1k-padding in the head"
    },
    {
        "metadata": "search_exponent",
        "modes": ["imxkobs"],
        "type": "int",
        "help": "The search exponent",
        "cli": ["--search-exponent"],
        "verbose-name": "Search exponent"
    },
    {
        "metadata": "chip_0_device_path",
        "modes": ["imxkobs"],
        "type": "path",
        "help": "The device path of Chip 0",
        "cli": ["--chip0-device-path"],
        "verbose-name": "Chip 0 device path"
    },
    {
        "metadata": "chip_1_device_path",
        "modes": ["imxkobs"],
        "type": "path",
        "help": "The device path of Chip 1",
        "cli": ["--chip1-device-path"],
        "verbose-name": "Chip 1 device path"
    },
    {
        "metadata": "sha256sum",
        "is_volatile": true,
        "verbose-name": "sha256sum"
    },
    {
        "metadata": "size",
        "is_volatile": true,
        "verbose-name": "file size"
    },
    {
        "metadata": "compressed",
        "is_volatile": true,
        "verbose-name": "Compressed file"
    },
    {
        "metadata": "required-uncompressed-size",
        "is_volatile": true,
        "verbose-name": "Uncompressed size"
    }
]
